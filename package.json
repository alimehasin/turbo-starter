{
  "name": "turbo-starter",
  "private": true,
  "packageManager": "bun@1.2.23",
  "workspaces": [
    "apps/*",
    "configs/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "typecheck": "turbo run typecheck",
    "i18n:extract": "turbo run i18n:extract",
    "api:gentype": "turbo run api:gentype",
    "scripts:rmdeps": "bash ./scripts/rmdeps.sh",
    "scripts:update": "bash ./scripts/update.sh",
    "scripts:cleanup": "bash ./scripts/cleanup.sh",
    "scripts:reinstall": "bash ./scripts/reinstall.sh",
    "scripts:create-admin": "cd apps/backend && bun run scripts/create-admin.ts",
    "db:generate": "cd apps/backend && bunx prisma generate",
    "db:migrate:dev": "cd apps/backend && bunx prisma migrate dev",
    "db:migrate:deploy": "cd apps/backend && bunx prisma migrate deploy",
    "db:migrate:reset": "cd apps/backend && bunx prisma migrate reset",
    "db:seed": "cd apps/backend && bunx prisma db seed",
    "db:studio": "cd apps/backend && bunx prisma studio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@types/bun": "^1.2.23",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  }
}
