{
  "name": "@repo/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "tsc --noEmit && bun build --target bun --minify-whitespace --minify-syntax --outfile ./dist/index.js src/server.ts",
    "start": "bun ./dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/cron": "^1.4.1",
    "@elysiajs/openapi": "^1.4.2",
    "@prisma/client": "^6.16.2",
    "@repo/db": "workspace:*",
    "better-auth": "^1.3.11",
    "elysia": "^1.4.5",
    "elysia-helmet": "^3.0.0",
    "elysia-rate-limit": "^4.4.0",
    "logixlysia": "^5.1.1"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/bun": "^1.2.22",
    "typescript": "^5.9.2"
  }
}
